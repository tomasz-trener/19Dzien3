<Window x:Class="ExcelOtwieranieTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelOtwieranieTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button DockPanel.Dock="Top" Content="Read excel and send email with table" x:Name="btnSendEmailFromExcel" Click="btnSendEmailFromExcel_Click"></Button>
        <Button x:Name="btnForwardEmail" DockPanel.Dock="Top" Content="Forward email" Click="btnForwardEmail_Click"></Button>
        <DataGrid x:Name="dgvData" />
    </DockPanel>
</Window>